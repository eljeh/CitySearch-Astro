---
import '../../assets/css/components/citySearch/PropertyCard.css';
import CardThumb from './CardThumb.astro';

const { apartment } = Astro.props;
const backgroundImage = `https://loremflickr.com/400/400/apartment?random=${apartment.id}`;
---

<div
  class='card'
  id=`PropertyThumbnail-${apartment.id}`
  style=`background-image: url(${backgroundImage})`
>
  <label for='favorite' class='favorite'>
    <input id='favorite' type='checkbox' aria-label='favorite' />
    <span class='fa-stack'>
      <i class='fas fa-heart fa-stack-1x'></i>
      <i class='far fa-heart fa-stack-1x'></i>
    </span>
  </label>

  <div class='close'>
    <button>
      <i class='far fa-times-circle fa-lg'></i>
    </button>
  </div>

  <CardThumb {apartment} />

</div>

